{
  "name": "smoker",
  "version": "0.1.0",
  "scripts": {
    "check": "tsc",
    "lint": "eslint",
    "format": "prettier --write src test",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "build": "tsup",
    "postbuild": "find features -name '*.feature' -exec cp --parents {} dist \\;",
    "prestart": "npm run build",
    "start": "node dist/src/index.cjs",
    "clean": "rm -rf dist build coverage .tsbuildinfo .vitest *.log"
  },
  "keywords": [
    "smoketest",
    "cucumberjs",
    "typescript"
  ],
  "author": "Fabiano Pinto <fabianopinto@gmail.com>",
  "license": "ISC",
  "type": "module",
  "description": "A smoke testing framework with BDD support",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.30.1",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@cucumber/cucumber": "^11.3.0"
  }
}
